(require 'package)

(setq package-archives nil)
(add-to-list 'package-archives '("gnu" . "/opt/elpa/gnu/"))
(add-to-list 'package-archives '("org" . "/opt/elpa/org/"))
(add-to-list 'package-archives '("melpa" . "/opt/elpa/melpa/"))
(add-to-list 'package-archives '("melpa-stable" . "/opt/elpa/melpa-stable/"))
(add-to-list 'package-archives '("marmalade" . "/opt/elpa/marmalade/"))

(defvar +tool-bar-mode+ t)
(defvar +menu-bar-mode+ t)
(defvar +blink-cursor-mode+ t)
(defvar +scroll-bar-mode+ t)

(setq *mac-scale-amount* 0
      *linux-scale-amount* 0)

(setq *load-slime* nil)

(provide 'pre-customize)
;;; pre-customize.el ends here