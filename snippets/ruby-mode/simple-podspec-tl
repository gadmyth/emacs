# -*- mode: snippet -*-
# name: simple-podspec-tl
# key: simple-podspec-tl
# --

Pod::Spec.new do |s|
  s.name = "${1:name}"
  s.version = "${2:0.0.1}"
  s.summary = "$3"
  s.homepage = "${4:home page url}"
  s.license = { :type => "MIT", :file => "LICENSE" }
  s.author = { "gadmyth" => "gadmyth@gmail.com" }
  s.social_media_url = ""
  s.platform = :ios, "7.0"
  s.source = { :git => "${20:<git repo url>}", :tag => "${21:0.0.1}" }
  s.source_files = "${30:<Project Dir>}/**/*.{h,m}"
end
